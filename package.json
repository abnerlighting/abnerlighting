{
  "name": "abnerlighting.com",
  "version": "1.0.0",
  "description": "Abner Lighting website",
  "scripts": {
    "build": "npm run build:css && npm run copy:assets",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "copy:assets": "cp -r public/* dist/",
    "preview": "npx serve dist"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0-alpha.25"
  }
}
